@page "/appointments/"

@if (string.IsNullOrEmpty(errorMessage) == false)
{
    <div class="alert alert-danger">
        @errorMessage
    </div>
}

<div>
    <div class="row">
        <div class="col-md-6">
            <p>Lütfen Sicil Numaranızı Giriniz</p>
            
            <EditForm Model="@registrationNumber" OnValidSubmit="FindEmployee">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="form-group">
                    <label for="startDate">Sicil No</label>
                    <InputText class="form-control" id="registrationNumber" @bind-Value="registrationNumber" />
                    <ValidationMessage For="@(() => registrationNumber)" />
                </div>

                <button class="btn btn-success" type="submit">Bul</button>
            </EditForm>
        
        </div>

        <div class="col-md-6">

            <table id="employeeData" class="table">
                <tbody>
                    <tr>
                        <td>
                            Sicil No
                        </td>
                        <td>
                            @Employee.RegistrationNumber
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Ad
                        </td>
                        <td>
                            @Employee.Name
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Soyad
                        </td>
                        <td>
                            @Employee.Surname
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Email
                        </td>
                        <td>
                            @Employee.Email
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Lokasyon
                        </td>
                        <td>
                            @if (Employee.Location != null)
                            {
                                @Employee.Location.LocationDescription
                            }
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Departman
                        </td>
                        <td>
                            @if (Employee.Department != null)
                            {
                                @Employee.Department.DepartmentDescription
                            }
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Pozisyon
                        </td>
                        <td>
                            @if (Employee.Position != null)
                            {
                                @Employee.Position.PositionDescription
                            }
                        </td>
                    </tr>
                </tbody>
            </table>
        
        </div>
    </div>

    <br />
    <br />

    <div class="row">
        @if (messageTitle != null && messageBody != null)
        {
            <div class="card text-white bg-warning" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@messageTitle</h5>
                    <p class="card-text">@messageBody</p>
                </div>
            </div>
        }

        @if (doctors != null)
        {
            foreach (var doctor in doctors)
            {
                <button @onclick="() => GetDoctorAvailabilities(doctor.Id)">
                    @($"Dr. {doctor.Name} {doctor.Surname}")
                </button>
            }
        }
    </div>

    <br />
    <br />

    <div class="row">
        @if (availabilities != null)
        {
            <table id="availabilityData" class="table">
                <thead>
                    <tr>
                        <th>
                            Doktor
                        </th>
                        <th>
                            Tarih
                        </th>
                        <th>
                            Başlangıç Saati
                        </th>
                        <th>
                            Bitiş Saati
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var availability in availabilities)
                    {
                        <tr>
                            <td>
                                @availability.Doctor.Name @availability.Doctor.Surname
                            </td>
                            <td>
                                @availability.Date.ToString("dd-MM-yyyy")
                            </td>
                            <td>
                                @availability.StartTime
                            </td>
                            <td>
                                @availability.EndTime
                            </td>
                            <td>
                                <button class="btn btn-outline-primary" @onclick="() => CreateAppointment(availability)">
                                    <i class="fa fa-file"></i>Randevu Al
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>