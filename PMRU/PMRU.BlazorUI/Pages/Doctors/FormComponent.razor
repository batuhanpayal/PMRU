<EditForm Model="@Doctor" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label>TC Kimlik No:</label>
            <div>
                <InputText @bind-Value="@Doctor.IdentityNumber" class="form-control" />
                <ValidationMessage For="@(() => Doctor.IdentityNumber)" />
            </div>
        </div>
        <div class="form-group">
            <label>İsim:</label>
            <div>
                <InputText @bind-Value="@Doctor.Name" class="form-control" />
                <ValidationMessage For="@(() => Doctor.Name)" />
            </div>
        </div>
        <div class="form-group">
            <label>Soyisim:</label>
            <div>
                <InputText @bind-Value="@Doctor.Surname" class="form-control" />
                <ValidationMessage For="@(() => Doctor.Surname)" />
            </div>
        </div>
        <div class="form-group">
            <label>Telefon:</label>
            <div>
                <InputText @bind-Value="@Doctor.Phone" class="form-control" />
                <ValidationMessage For="@(() => Doctor.Phone)" />
            </div>
        </div>
        <div class="form-group">
            <label>EMail:</label>
            <div>
                <InputText @bind-Value="@Doctor.Email" class="form-control" />
                <ValidationMessage For="@(() => Doctor.Email)" />
            </div>
        </div>
        <div class="form-group">
            <label>Lokasyon Id:</label>
            <div>
                <InputNumber @bind-Value="@Doctor.LocationID" class="form-control" />
                <ValidationMessage For="@(() => Doctor.LocationID)" />
            </div>
        </div>
        <div class="form-group">
            <label>Sicil No:</label>
            <div>
                <InputText @bind-Value="@Doctor.RegistrationNumber" class="form-control" />
                <ValidationMessage For="@(() => Doctor.RegistrationNumber)" />
            </div>
        </div>
        <div class="form-group">
            <label>Şifre:</label>
            <div>
                <InputText @bind-Value="@Doctor.Password" class="form-control" />
                <ValidationMessage For="@(() => Doctor.Password)" />
            </div>
        </div>
       
    </fieldset>
    @if (!Disabled)
        {
            <button type="submit" class="btn btn-success btn-block">
                @ButtonText
            </button>
        }
</EditForm>
