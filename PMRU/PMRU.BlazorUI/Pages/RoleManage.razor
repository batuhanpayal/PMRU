@page "/rolemanage/"


<div class="row">
        <div class="col-md-6">
            <p>Lütfen Sicil Numaranızı Giriniz</p>
            
            <EditForm Model="@registrationNumber" OnValidSubmit="FindEmployee">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="form-group">
                    <label for="startDate">Sicil No</label>
                    <InputText class="form-control" id="registrationNumber" @bind-Value="registrationNumber" />
                    <ValidationMessage For="@(() => registrationNumber)" />
                </div>

                <button class="btn btn-success" type="submit">Bul</button>
            </EditForm>
        <table class="table">
            <thead>
                <tr>
                    <th>TC No</th>
                    <th>İsim</th>
                    <th>Soyisim</th>
                    <th>Telefon</th>
                    <th>Email</th>
                    <th>Sicil No</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Employee.IdentityNumber</td>
                    <td>@Employee.Name</td>
                    <td>@Employee.Surname</td>
                    <td>@Employee.Phone</td>
                    <td>@Employee.Email</td>
                    <td>@Employee.RegistrationNumber</td>
                </tr>
            </tbody>
        </table>
        
        </div>
    @if (Disabled)
    {
        <EditForm Model="@role" OnValidSubmit="GiveRole">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="form-group">
                <label for="role">Role</label>
                <InputSelect class="form-control" id="role" @bind-Value="role">
                    <option>Rol Seçiniz</option>
                    <option value="doctor">Doctor</option>
                    <option value="systemadmin">System Admin</option>
                    <option value="localadmin">local Admin</option>
                </InputSelect>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <InputText class="form-control" id="password" @bind-Value="password" />
            </div>
            <button class="btn btn-success" type="submit">Rol ver</button>
        </EditForm>

    }

</div>
